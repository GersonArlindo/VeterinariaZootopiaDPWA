@model WebApp.Areas.Contactos.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ ViewData["Title"] = "Crear Contacto";
    Layout = "_Layout"; }
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Catalogos</li>
                    <li class="breadcrumb-item">Contactos</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col align-self-lg-end">
                <a asp-area="Contactos" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">Llene su formulario correctamente</div>
            <div class="card-tools">

            </div>
        </div>
        <div class="card-body">
            <!-- form start -->
            <form method="post" asp-action="Create" autocomplete="off" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Contacto.Codigo"></label>
                        <input asp-for="Contacto.Codigo" class="form-control" />
                        <span asp-validation-for="Contacto.Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contacto.Nombre"></label>
                        <input asp-for="Contacto.Nombre" class="form-control" />
                        <span asp-validation-for="Contacto.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contacto.SobreMi"></label>
                        <input asp-for="Contacto.SobreMi" class="form-control" />
                        <span asp-validation-for="Contacto.SobreMi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contacto.Telefono"></label>
                        <input asp-for="Contacto.Telefono" class="form-control" />
                        <span asp-validation-for="Contacto.Telefono" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Contacto.Imagen"></label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="fileUpload" accept=".jpg, .jpeg, .png">
                                <label class="custom-file-label" for="exampleInputFile">Escoger archivo</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Subir</span>
                            </div>
                        </div>
                        <label></label>
                    </div>

                    @*<div class="form-group">
            <label asp-for="Contacto.Imagen"></label>
            <input asp-for="Contacto.Imagen" class="form-control" />
            <span asp-validation-for="Contacto.Imagen" class="text-danger"></span>
        </div>*@
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button> &nbsp;
                    <button type="reset" class="btn btn-warning"><i class="fas fa-eraser"></i> Limpiar</button>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" language="javscript">
    $.validator.unobtrusive.parse(document);
        $(document).ready(function () {
            $('#a-Contacto').addClass('active');
        });</script>
}