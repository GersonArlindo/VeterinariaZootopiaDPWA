@page
@model WebApp.Areas.Productos.Pages.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "_Layout";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Catalogos</li>
                    <li class="breadcrumb-item">Productos</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col align-self-lg-end">
                <a asp-area="Productos" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-title"><h1>Seguro que desea ELIMINAR este registro?</h1></div>
            <div class="card-tools">
            </div>
        </div>
        <div class="card-body">
            <!-- form start -->
            <form method="post" asp-action="Edit" asp-route-id="@Model.Producto.Id" autocomplete="off">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Producto.Codigo"></label>
                        <input asp-for="Producto.Codigo" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Producto.Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producto.Nombre"></label>
                        <input asp-for="Producto.Nombre" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producto.Descripcion"></label>
                        <input asp-for="Producto.Descripcion" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producto.Tipo"></label>
                        <input asp-for="Producto.Tipo" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Producto.Tipo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producto.Precio"></label>
                        <input asp-for="Producto.Precio" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i> Eliminar</button> &nbsp;
                    <a asp-area="Productos" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-ban"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts{

    <style>
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: auto;
        }

            .content .card {
                width: 500px;
                height: 800px;
                border-radius: 8px;
                box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
                overflow: hidden;
                margin: 20px;
                text-align: center;
                transition: all 0.25s;
            }
    </style>
}